#!/bin/bash
cm=`date +%m`
cy=`date +%Y`
show () { 
	cal $cm $cy | rofi -dmenu -width 12 -lines 9 -kb-custom-1 h -kb-custom-2 l 
	r=$?
	echo $cm $cy
	if [[ $r == 10 ]]; then
		(( --cm ))
		if [[ $cm < 1 ]]; then
			cm=12
			(( --cy ))
		fi	
		show
	elif [[ $r == 11 ]]; then
		(( ++cm ))
		if [[ $cm > 12 ]]; then
			cm=1
			(( ++cy ))
		fi
		show	 
	fi
}
show
