#!/usr/bin/env bash
tstamp=$(date +%F,%T)
sfolder=/home/pachums/Pictures/Screenshots/
maim $@ > $sfolder/djtmp_screenshot.png
cat $sfolder/djtmp_screenshot.png | xclip -selection c -t image/png
pinfo=($(identify $sfolder/djtmp_screenshot.png))
ftype=${pinfo[1]}
pqual=${pinfo[2]}
echo "$tstamp"_"$pqual"
if [ $ftype == "PNG" ]; then
	mv $sfolder/djtmp_screenshot.png "$sfolder/"$tstamp"_$pqual.png"
else
	mv $sfolder/djtmp_screenshot.png "$sfolder/"$tstamp"_$pqual.jpg"
fi
