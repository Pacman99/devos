#!/bin/bash
#Get Time
ctime=$(date +%l:%M\ %p\ %a\ %b\ %d\ %Y\ %Z)

#Set Path for reading battery info
bpath=$(readlink -f /sys/class/power_supply/BAT0/)

#Find Battery Percentage
aibatt=($(acpi -b))
batt="${aibatt[@]:3:7}"
#Check Charging Status
icon=battery-good  ##if not charging
if [ $(cat $bpath/status) == "Charging" ]; then
	icon=battery-good-charging
fi
extime=3500
notify-send -t $extime "$ctime" 2>/dev/null
notify-send -t $extime -i $icon "$batt" 2>/dev/null
echo "$ctime"
echo "$(cat $bpath/status) $batt"
